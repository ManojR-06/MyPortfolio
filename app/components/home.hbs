<footer class="footer">
  <p class="social">Feeling social? Find me on these online spaces too!</p>
  <div class="media-container">
    {{#each this.mediaLinks as | media |}}
    {{#if media.newTabAction}}
    <a href={{media.href}} target="_blank" rel="noopener noreferrer" aria-label={{media.ariaLabel}} class="media">
      <img src="../../svgs/{{media.imgName}}" alt="" class="media-icons">
    </a>
    {{else}}
    <a href={{media.href}} aria-label={{media.ariaLabel}} class="media">
      <img src="../../svgs/{{media.imgName}}" alt="" class="media-icons">
    </a>
    {{/if}}
    {{/each}}
  </div>
